<% if @reminders.any?  %>
  <% @reminders.each do |r| %>
   <h2><%= link_to "#{r.what}", edit_reminder_path(r.id) %><h2>
   <h3><%= r.time %><h3>
   <h3><%= r.where %><h3>
   <h3><%=link_to 'Edit', edit_reminder_path(r) %><h3>
   <h3><%=link_to 'Delete', reminder_path(r), method: :delete %><h3>
  <br><% end %><br>
<% end %>

<br><%=link_to 'Create new reminder', new_reminder_path(@reminder) %><br>

<br><%=link_to 'See your tribes', tribes_path(current_user.id) %><br>

<br><%= button_to 'Send todays reminders', reminders_send_todays_messages_path, method: :get %><br>
